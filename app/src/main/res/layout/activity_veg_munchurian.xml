<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VegMunchurian">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="400dp"
            android:layout_height="220dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/munchurian" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="119dp"
            android:fontFamily="sans-serif"
            android:text="Munchurian"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/ingredientTxt"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="297dp"
            android:layout_marginEnd="289dp"
            android:layout_marginBottom="476dp"
            android:paddingStart="10dp"
            android:text="ingredients:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ingTexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="326dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="For vegetable balls:\n* 1/2 Cup Cabbage\n* 1/2 Cup Carrot\n* 1/2 Cup Capsicum\n* 1/2 Cup Spring onion\n* 1 tsp Ginger\n* 1 tsp Garlic\n* 3 Tbsp Corn flour\n* 2 Tbsp Maida\n* 2 tsp Salt\n* 2 tsp Black pepper\n* 1 tsp Soy sauce\n* 1 Tbsp Water\nFor manchurian sauce:\n* Oil\n* 2 Tbsp Garlic\n* 1 Tbsp Ginger\n* 1 tsp Green chilli\n* 2 Tbsp Spring onion\n* 2 Tbsp Tomato ketchup\n* 2 Tbsp Chilly sauce\n* 1 tsp Soya sauce\n* 1 tsp Vinegar\n* 1 1/2 Tbsp Salt\n* 1 Tbsp Black pepper\n* 3 Tbsp Corn flour\n* 1 Cup Water"/>

        <TextView
            android:id="@+id/methodTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="850dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="6dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="Step 1-To prepare the vegetable balls:\n1.Take all the veggies, finely chopped, in a bowl along with ginger, garlic, corn flour, maida, salt, black pepper and soy sauce.\n2.Mix them well, adding water as required for consistency.\n3.Make round balls out of the thick vegetable mixture.\n4.Now deep fry the vegetable balls in a pan.\nStep 2-Prepare the sauce:\n1.Heat some oil in a pan and roast ginger, garlic and green chilli in it for a while.\n2.Add spring onion, tomato ketchup, chilly sauce, soya sauce and vinegar followed by salt and black pepper.\n3.Mix them well and add a mixture of corn flour plus water to the pan.\n4.Mix thoroughly and put the fried vegetable balls into the mixture.\n5.Properly mix the balls along with the sauce.\n6.Garnish with spring onion and celery. Serve hot along with cooked rice." />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="102dp"
            android:layout_height="23dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="820dp"
            android:layout_marginEnd="309dp"
            android:layout_marginBottom="267dp"
            android:paddingStart="10dp"
            android:text="Method:"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="222dp"
            android:layout_marginEnd="294dp"
            android:background="@color/colorAccent1"
            android:text="Serving 2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="222dp"
            android:layout_marginEnd="152dp"
            android:background="@color/colorAccent1"
            android:text="Prep Time 10m" />

        <Button
            android:id="@+id/button4"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="222dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorAccent1"
            android:text="Cook time 35m" />
    </RelativeLayout>
</ScrollView>